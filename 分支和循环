#define _CRT_SECURE_NO_WARNINGS 1

#include <stdio.h>

int main()
{
	int ret = 0;
	int ch = 0;
	char password[20] = { 0 };
	printf("请输入密码：");
	scanf(" % s", password);
	while ((ch = getchar()) != '\n')//将输入缓冲区里存储的字符拿走，以免下一个代码接受缓冲区信息导致直接运行
	{
		;
	}
	printf("请确认（Y/N）：");
	ret = getchar();
	if (ret == 'Y')
	{
		printf("确认成功\n");
	}
	else
	{
		printf("放弃确认\n");
	}

	return 0;
}
