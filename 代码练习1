#define _CRT_SECURE_NO_WARNINGS 1

#include <stdio.h>
//圆的面积
int main()
{
	float r = 0;
	float area = 0;
	printf("输入圆的半径r:\n");
	scanf("%f", &r);
	area = 3.14 * r * r;
	printf("圆的面积为：%f\n", area);//若print的是%.2f，输出的结果则会保留两位小数
	return 0;
}


//选择代码
int main()
{
	int input = 0;
	printf("想上好大学\n");
	printf("你要好好学习吗？（1/0）:");
	scanf("%d", &input);
	if (input == 1)
		printf("得到offer\n");
	else
		printf("回家卖红薯\n");

	return 0;
}


//循环代码
int main()
{
	int line = 0;
	printf("加入好公司\n");
	while (line < 2000)
	{
		printf("敲一行代码：%d\n", line);
		line++;
	}
	if (line >= 2000)
		printf("好offer\n");
	return 0;
}


//结构体代码
struct Book
{
	char name[20];
	short price;
};

int main()
{
	struct Book b1 = { "C语言程序设计", 55 };
	printf("书名：%s\n", b1.name);
	printf("价格:%d元\n", b1.price);
	b1.price = 15;
	printf("修改后的价格：%d元\n", b1.price);
	return 0;
}
